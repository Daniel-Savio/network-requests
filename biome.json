{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"formatter": {
		"indentStyle": "tab"
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"nursery": {
				"useSortedClasses": "off"
			},
			"correctness": {
				"noEmptyPattern": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "info"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"complexity":{
				"noForEach":"info"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"css": {
		"linter": {
			"enabled": true
		},
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true,
			"allowWrongLineComments": true
		}
	}
}
